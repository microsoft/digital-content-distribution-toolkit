{
  "AllowedHosts": "*",
  "KeyVaultName": "blendnet-dev-kv",
  "KeyVaultPrefix": "blendnetcontentprovider",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "ApplicationInsights": {
      "LogLevel": {
        "Default": "Information"
      }
    }
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithExceptionDetails", "WithMachineName", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "log-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:o} [{Level:u3}] {Application}/{MachineName}/{ThreadId} {Message}{NewLine}{Exception}"
        }
      }
    ],
    "Properties": {
      "Application": "blendnet.crm.contentprovider.api"
    }
  }
}

